<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginProcess</servlet-name>
        <servlet-class>Controlador.LoginProcess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterProcess</servlet-name>
        <servlet-class>Controlador.RegisterProcess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutProcess</servlet-name>
        <servlet-class>Controlador.LogoutProcess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerarInforme</servlet-name>
        <servlet-class>Controlador.GenerarInforme</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AsignarProyecto</servlet-name>
        <servlet-class>Controlador.AsignarProyecto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginProcess</servlet-name>
        <url-pattern>/LoginProcess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterProcess</servlet-name>
        <url-pattern>/RegisterProcess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutProcess</servlet-name>
        <url-pattern>/LogoutProcess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerarInforme</servlet-name>
        <url-pattern>/GenerarInforme</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AsignarProyecto</servlet-name>
        <url-pattern>/AsignarProyecto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>500</error-code>
        <location>/error500.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
</web-app>
